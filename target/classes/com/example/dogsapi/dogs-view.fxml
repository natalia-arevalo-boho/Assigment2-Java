<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0"  styleClass="details" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dogsapi.HelloController">
    <top>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Search dog breed:" />
            <TextField fx:id="searchField" />
            <Button fx:id="searchButton" onAction="#searchButtonClicked" text="Search" />
        </HBox>
    </top>
    <center>
        <ListView fx:id="resultListView" />
    </center>
</BorderPane>
